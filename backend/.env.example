# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/scheddy

# Example for different environments:
# Development: postgresql://dev_user:dev_password@localhost:5432/scheddy_dev
# Production: postgresql://prod_user:prod_password@db.example.com:5432/scheddy_prod

# Application Settings
ENV=development
DEBUG=True

# OpenRouter API Configuration (for LLM)
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxx
OPENROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free

# HuggingFace API Configuration (for embeddings)
# Get your free API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxx

# Qdrant Vector Database Configuration
# Choose ONE of the following setups:

# Option 1: Local Qdrant (for development)
QDRANT_URL=http://localhost:6333
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=  # Leave empty for local Qdrant

# Option 2: Qdrant Cloud (for production)
# Uncomment these and comment out the local settings above
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your-api-key-here
